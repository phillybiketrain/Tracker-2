# ==========================================
# Backend Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# Database Configuration
# Local: postgresql://postgres:YOUR_PASSWORD@localhost:5432/bike_train
# Railway: Automatically set when you link PostgreSQL service
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bike_train

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
# Local: http://localhost:5173
# Production: https://your-frontend-domain.vercel.app (no trailing slash)
PUBLIC_APP_URL=http://localhost:5173

# Email Configuration (Required for email features)
# Mailgun HTTP API - Get from: https://app.mailgun.com/ â†’ API Keys
# Domain should be your verified Mailgun domain (e.g., mg.yourdomain.com)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=mg.yourdomain.com
FROM_EMAIL=noreply@phillybiketrain.org

# Admin Password (Optional - for admin endpoints)
# Generate with: node -e "console.log(require('bcrypt').hashSync('your_password', 12))"
ADMIN_PASSWORD_HASH=$2b$12$placeholder

# Cloudinary Configuration (Required for image uploads)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
