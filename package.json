{
  "name": "philly-bike-train",
  "version": "2.0.0",
  "type": "module",
  "description": "Fixed-route bike transit tracker for Philadelphia",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:app\"",
    "dev:server": "node --watch server/index.js",
    "dev:app": "cd app && vite dev",
    "build": "echo 'Backend ready for deployment'",
    "build:server": "echo 'Server built'",
    "build:app": "cd app && vite build",
    "db:setup": "node server/db/setup.js",
    "db:migrate": "node server/db/migrate.js",
    "start": "npm run db:migrate && node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "cors": "^2.8.5",
    "nodemailer": "^6.9.7",
    "node-cron": "^3.0.3",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
